---
export interface Props {
  thumbnail: string;
  title: string;
  href: string;
}

const { href, title, thumbnail } = Astro.props;
---

<li class='list-none flex w-full'>
  <a
    class='relative block group w-full'
    href={href}
    target='_blank'
    rel='noreferrer noopener'
  >
    <span
      class='absolute inset-0 border-2 border-white border-dashed rounded-lg'
      aria-hidden='true'></span>
    <div
      class='text-lg font-medium text-gray-700 dark:text-gray-200 transition bg-white border-2 border-white rounded-lg group-hover:-translate-x-2 group-hover:-translate-y-2 dark:bg-gray-800 p-4 flex items-center justify-between'
    >
      <p>
        {title}
      </p>
      <span>&rbarr;</span>
    </div>
  </a>
</li>
