---
import * as data from '@data/index.json';
---

<div class='flex flex-col items-center justify-center gap-y-2 text-white mb-14'>
  <img
    class='h-32 w-32 rounded-full border-4 border-slate-800 dark:border-slate-200'
    src={data.avatar}
    alt={data.name}
  />
  <h1 class='text-3xl font-bold'>{data.name}</h1>
  <h2 class='text-xl font-semibold'>{data.nickname}</h2>
</div>
